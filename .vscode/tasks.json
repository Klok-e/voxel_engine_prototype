{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo check"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run --release"
		},
		{
			"type": "cargo",
			"command": "fmt",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo fmt"
		},
		{
			"type": "cargo",
			"command": "criterion",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo criterion"
		},
		{
			"type": "cargo",
			"command": "criterion",
			"args": [
				"--bench",
				"meshing"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo criterion --bench meshing"
		},
		{
			"type": "cargo",
			"command": "criterion",
			"args": [
				"--bench",
				"generation"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo criterion --bench generation"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "flamegraph",
			"args": [
				"--bench",
				"meshing"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo flamegraph --bench meshing"
		},
		{
			"type": "cargo",
			"command": "flamegraph",
			"args": [
				"--bench",
				"generation"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo flamegraph --bench generation"
		},
		{
			"type": "cargo",
			"command": "flamegraph",
			"args": [
				"--bin",
				"voxel_engine_prototype"
			],
			"env": {
				"CARGO_MANIFEST_DIR": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo flamegraph --bin voxel_engine_prototype"
		}
	]
}